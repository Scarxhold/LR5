@model LR5.Models.FormModels

@{
    ViewData["Title"] = "Form Page";
}

<h2>Заповніть форму</h2>

<form asp-action="Submit" method="post">
    <div>
        <label>Введіть значення:</label>
        <input type="text" asp-for="Value" required />
    </div>
    <div>
        <label>Оберіть дату для вичерпання Cookies:</label>
        <input type="datetime-local" asp-for="ExpirationDate" required />
    </div>
    <div>
        <button type="submit">Надіслати</button>
    </div>
</form>
